<odoo>


    <!-- Menu Service -->
    <record id="view_service_tree" model="ir.ui.view">
        <field name="name">gestion.service.tree</field>
        <field name="model">gestion.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_service_form" model="ir.ui.view">
        <field name="name">gestion.service.form</field>
        <field name="model">gestion.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Employés">
                            <field name="employe_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="email"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gestion_service" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">gestion.service</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_service" name="Services" parent="menu_gestion_employe" action="action_gestion_service"/>

    <!-- Employé -->
    <record id="view_employe_tree" model="ir.ui.view">
        <field name="name">gestion.employe.tree</field>
        <field name="model">gestion.employe</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="service_id"/>
                <field name="conge_ids"/>
                <field name="actif"/>
                <field name="contrat_ids"/>

            </tree>
        </field>
    </record>

    <record id="view_employe_form" model="ir.ui.view">
        <field name="name">gestion.employe.form</field>
        <field name="model">gestion.employe</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="prenom"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="date_embauche"/>
                        <field name="conge_ids"/>
                        <field name="service_id"/>
                        <field name="actif"/>

                        <field name="contrat_ids"/>
                        <field name="photo" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gestion_employe" model="ir.actions.act_window">
        <field name="name">Employés</field>
        <field name="res_model">gestion.employe</field>
        <field name="view_mode">tree,form</field>
    </record>



    <menuitem id="menu_gestion_rh_root" name="Gestion RH"/>
    <menuitem id="menu_gestion_employe" name="Employés" parent="menu_gestion_rh_root"/>
    <menuitem id="menu_employe" name="Employés" parent="menu_gestion_employe" action="action_gestion_employe"/>
</odoo>

