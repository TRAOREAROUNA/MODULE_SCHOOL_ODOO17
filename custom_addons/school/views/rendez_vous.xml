<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="school_rendezvous_action" model="ir.actions.act_window">
        <field name="name">Rendez vous</field>
        <field name="res_model">school.rendezvous</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>
                cliquez sur nouveau pour creer un rdv
            </p>
        </field>
    </record>

     <!-- Vue tree -->
    <record id="school_rendezvous_tree" model="ir.ui.view">
        <field name="name">school.rendezvous.tree</field>
        <field name="model">school.rendezvous</field>
        <field name="arch" type="xml">
            <tree string="Rendez-vous">
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="student_id"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

      <!-- Vue calendrier-->
    <record id="school_rendezvous_calendar" model="ir.ui.view">
        <field name="name">school.rendezvous.calendar</field>
        <field name="model">school.rendezvous</field>
        <field name="arch" type="xml">
            <calendar string="Rendez-vous"  mode="month" date_start="date_debut" date_stop="date_fin" color="student_id">
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="student_id"/>
                <field name="description"/>
            </calendar>
        </field>
    </record>


    <menuitem id="school_rdv_menu" name="Rendezvous" action="school_rendezvous_action" parent="School_menu" sequence="8"/>
</odoo>
