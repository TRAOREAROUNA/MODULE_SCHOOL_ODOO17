<odoo>
    <!-- DÃ©claration de l'action du rapport list student -->
    <record id="action_print_student_list_report" model="ir.actions.report">
        <field name="name">Imprimer list student</field>
        <field name="model">print.student.list</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school.print_student_list_report_template</field>
        <field name="report_file">school.print_student_list_report_template</field>
        <field name="binding_model_id" ref="model_school_student"/>
        <field name="binding_type">report</field>
    </record>

    <template id="print_student_list_report_template">
        <t t-call="web.html_container">
<!--            <t t-foreach="docs" t-as="o">-->
                <t t-call="web.basic_layout">
                    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"/>
                    <div class="page">
                        <h1 class="text-center">Liste des eleves</h1>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Matricule</th>
                                    <th>Nom</th>
                                    <th>Date de naissance</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="list_to_print" t-as="student">
                                    <tr>
                                        <td><t t-esc="student['matricule']"/></td>
                                        <td><t t-esc="student['name']"/></td>
                                        <td><t t-esc="student['birth_date']"/></td>
                                        <td><t t-esc="student['description']"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
    </template>
</odoo>